{
  "name": "seedoflife",
  "version": "1.0.0",
  "description": "Subgraph that powers Seed of Life",
  "license": "MIT",
  "scripts": {
    "build:arbitrum-testnet": "npm run codegen:arbitrum-testnet && graph build",
    "build:arbitrum": "npm run codegen:arbitrum && graph build",
    "build:mainnet": "true",
    "codegen:arbitrum-testnet": "npm run prepare:arbitrum-testnet && graph codegen",
    "codegen:arbitrum": "npm run prepare:arbitrum && graph codegen",
    "codegen:mainnet": "true",
    "deploy:arbitrum-testnet": "graph deploy --product hosted-service treasureproject/seedoflife-dev",
    "deploy:arbitrum": "graph deploy --product hosted-service treasureproject/seedoflife",
    "deploy:mainnet": "true",
    "prepare:arbitrum-testnet": "mustache ../../node_modules/@treasure/subgraph-config/src/arbitrum-testnet.json template.yaml > subgraph.yaml",
    "prepare:arbitrum": "mustache ../../node_modules/@treasure/subgraph-config/src/arbitrum.json template.yaml > subgraph.yaml",
    "prepare:mainnet": "true",
    "test": "graph test -- --lib=../../node_modules/",
    "test:arbitrum-testnet": "yarn test",
    "test:arbitrum": "yarn test",
    "test:mainnet": "true"
  }
}
